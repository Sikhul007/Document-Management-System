@model DMS.Models.UserModel
@{
    ViewBag.Title = "Edit User";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="h4 mb-0">Edit User</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditUser" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="UserName" class="form-label">Username</label>
                                <input asp-for="UserName" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Full Name</label>
                                <input asp-for="Name" class="form-control" />
                            </div>

                            
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Roles" class="form-label">Role</label>
                                <select asp-for="Roles" class="form-select">
                                    <option>Admin</option>
                                    <option>Developer</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-4 form-check form-switch">
                            <label class="form-check-label" asp-for="IsActive">IsActive</label>
                            <input class="form-check-input" asp-for="IsActive" type="checkbox" role="switch" />
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-success me-md-2">Update</button>
                            @* <a asp-controller="User" asp-action="AdminDashboard" class="btn btn-secondary">Go to Admin Dashboard</a> *@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>