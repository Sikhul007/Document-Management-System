@model List<DMS_Final.Models.DocumentDetailsModel>

@{
    ViewData["Title"] = "Rejected Documents";
}

<h2 class="text-center fw-bold text-primary mb-4">
    <i class="bi bi-file-earmark-text me-2"></i> Rejected Documents
</h2>

<div class="table-responsive" style="overflow-x:auto;">
    <table class="table table-bordered table-hover align-middle text-center">
        <thead class="table-primary">
            <tr>
                <th class="text-center text-nowrap">Dcoument Description</th>
                <th class="text-center text-nowrap">Created On</th>
                <th class="text-center text-nowrap">Notes</th>
                <th class="text-center text-nowrap">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No document details found.</td>
                </tr>
            }
            else
            {
                @foreach (var doc in Model)
                {
                    <tr>
                        <td class="text-center">@doc.Description</td>
                        <td class="text-center text-nowrap">@doc.CreatedOn.ToString("dd MMM. yy")</td>
                        <td class="text-center text-nowrap">
                            @doc.Notes
                        </td>
                        <td class="text-center text-nowrap">
                            <a asp-action="ViewDocument" asp-route-documentDetailId="@doc.Id" class="btn btn-info btn-sm" target="_blank" title="View Document">
                            <i class="bi bi-eye-fill"></i>
                        </a>

                        <a asp-action="DownloadDocument" asp-route-documentDetailId="@doc.Id" class="btn btn-secondary btn-sm" title="Download Document">
                            <i class="bi bi-download"></i>
                        </a>
                        </td>
                        
                    </tr>
                }
            }
        </tbody>
    </table>
</div>